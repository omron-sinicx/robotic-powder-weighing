      <origin xyz="0 0 0.47"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0.47"/>
    </inertial>
  </link>

  <link name="pole_part1">
    <visual>
      <geometry>
        <box size="1.5 3 0.04"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="1.5 3 0.04"/>	
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0"/>
    </inertial>
  </link>

  <link name="pole_part2">
    <visual>
      <geometry>
        <box size="1.5 3 0.04"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="1.5 3 0.04"/>	
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0"/>
    </inertial>
  </link>

  <link name="pole_part3">
    <visual>
      <geometry>
        <box size="1.5 0.04 3"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="1.5 0.04 3"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0"/>
