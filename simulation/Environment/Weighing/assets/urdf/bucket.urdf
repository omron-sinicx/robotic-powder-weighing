  <link name="pole">
    <visual>
      <geometry>
        <box size="0.04 3 3"/>
        <!-- <mesh filename="bucket.stl" scale="0.01 0.01 0.01"/> -->
      </geometry>
      <origin xyz="0 0 0.47"/>
      <!-- <material name="pole_mat">
